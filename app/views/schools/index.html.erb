<h1>Listing schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Beginning year</th>
      <th>Ending year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.person.name %></td>
        <td><%= school.name %></td>
        <td><%= school.beginning_year %></td>
        <td><%= school.ending_year %></td>
        <td><%= link_to 'Show', person_school_path(school.id, school.person_id) %></td>
        <td><%= link_to 'Edit', edit_person_school_path(school.id, school.person_id) %></td>
        <td><%= link_to 'Destroy', person_school_path(school.id, school.person_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_person_school_path %>
